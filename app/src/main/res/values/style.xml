<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomPopupStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">315dp</item>
    </style>


    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">#4D000000</item>

        <item name="colorControlActivated">@color/dialog_color_1</item>
    </style>

    <style name="PopupAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

</resources>